set nocompatible
filetype plugin on

"encoding
set encoding=utf-8
set fileencodings=utf-8,gb18030,gbk,gb2312

"language
set langmenu=zh_CN.UTF-8
set helplang=cn

"display
syntax on
colorscheme industry
set number
set relativenumber
set ruler
set cursorline
set hlsearch

"function
set autoindent
set smartindent
set autowrite
set ignorecase

"TAB feature
set smarttab
set tabstop=8
set expandtab

inoremap jk <ESC>

